			<a>customer.id</a>
			<b>customerId</b>
		</field>
		<field>
			<a>customer.name</a>
			<b>customerName</b>
		</field>
	</mapping>

	<mapping>
		<class-a>com.mlimavieira.model.OrderLine</class-a>
		<class-b>com.mlimavieira.dto.OrderLineDto</class-b>
		<field>
			<a>product.id</a>
			<b>productId</b>
		</field>
		<field>
